# Visa Direct Real API Configuration
# Source this file to set up environment for real API: source visa_real_api.env

# API Configuration
export VISA_BASE_URL=${VISA_BASE_URL:-https://sandbox.api.visa.com}
export VISA_BASE_URL_B2C=${VISA_BASE_URL_B2C:-https://sandbox.webapi.visa.com}
export VISA_JWKS_URL=https://sandbox.api.visa.com/jwks
export SDK_ENV=production

# Certificate Paths (update these paths to match your certificate locations)
export VISA_CERT_PATH=./credentials/client_certificate.pem
export VISA_KEY_PATH=./credentials/private_key.pem
export VISA_CA_PATH=./credentials/ca_certificate.pem

# Optional: Certificate Password (if your certificate requires a password)
# export VISA_CERT_PASSWORD=your_certificate_password

# Your Visa Direct Originator ID (get this from Visa Developer Portal)
export VISA_ORIGINATOR_ID=your_originator_id_here

# Optional: Additional configuration
# export VISA_API_KEY=your_api_key_here
# export VISA_SHARED_SECRET=your_shared_secret_here

echo "âœ… Visa Direct Real API environment configured!"
echo "Base URL (B2B): $VISA_BASE_URL"
echo "B2C Base URL: $VISA_BASE_URL_B2C"
echo "SDK Environment: $SDK_ENV"

